    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1",
    "react-markdown": "^9.0.1",
    "react-window": "^1.8.9",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.5.0",
    "@testing-library/cypress": "^10.0.3",
