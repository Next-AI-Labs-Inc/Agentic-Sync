{
  "name": "ix-tasks",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "help": "node scripts/help.js",
    "build:production": "NEXT_LINT=false NODE_OPTIONS='--max-old-space-size=8192' NEXT_TELEMETRY_DISABLED=1 next build",
    "build": "NEXT_LINT=false NODE_OPTIONS='--max-old-space-size=4096' NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "next dev -p 3020",
    "lint": "next lint",
    "test": "jest --config=.jestrc.json",
    "test:node": "jest --config=.jestrc.json --testEnvironment=node",
    "test:watch": "jest --watch --config=.jestrc.json",
    "test:coverage": "jest --coverage --config=.jestrc.json",
    "generate-icons": "node scripts/create-simple-icons.js",
    "generate-app-icons": "node scripts/process-app-icons.js",
    "generate-simple-icons-from-source": "node scripts/simple-icon-from-source.js",
    "generate-colored-icons": "node scripts/create-colored-icon.js",
    "generate-fixed-icons": "node scripts/create-html-icon.js",
    "direct-copy-icon": "node scripts/direct-icon-copy.js",
    "convert-icons-properly": "node scripts/convert-icons-properly.js",
    "dev:optimized": "NODE_ENV=production NEXT_PUBLIC_OPTIMIZE_CPU=true next dev -p 3045",
    "start:all": "node scripts/start-all.js",
    "verify-startup": "node scripts/verify-app-startup.js",
    "verify-build": "node scripts/verify-app-build.js",
    "verify-concurrent": "node scripts/verify-app-concurrent.js",
    "verify": "node scripts/verify-app.js",
    "verify:imports": "node scripts/verify-component-imports.js",
    "tauri": "cd src-tauri && tauri",
    "tauri:dev": "cd src-tauri && tauri dev",
    "tauri:build": "npm run convert-icons-properly && TAURI_BUILD=true npm run build && cd src-tauri && TAURI_BUILD=true tauri build",
    "build:app": "node scripts/build-tauri-app.js",
    "install:app": "open src-tauri/target/release/bundle/dmg/IX\\ Agent\\ Sync_0.1.0_aarch64.dmg",
    "deploy:app": "npm run build:app && npm run install:app",
    "create:latest": "node scripts/create-latest-json.js",
    "serve": "npx serve -p 3021",
    "test:api": "node scripts/test-api-connection.js",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "setup:components": "node scripts/setup-shared-components.js",
    "migrate:imports": "node scripts/migrate-imports.js",
    "precommit": "npm run verify:imports && npm run verify-build",
    "prebuild": "npm run verify:imports"
  },
  "dependencies": {
    "@ix/dropdown-menu": "file:../shared-tools/packages/dropdown-menu",
